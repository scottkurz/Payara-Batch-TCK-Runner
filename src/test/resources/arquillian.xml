  <container qualifier="glassfish" default="true">
    <configuration>
      <property name="adminHost">localhost</property>
      <property name="adminHttps">true</property>
      <property name="authorisation">true</property>
      <property name="ignoreCertificates">true</property>
      <property name="adminPort">4848</property>
      <property name="adminUser">admin</property>
      <property name="adminPassword">admin</property>
      <!-- true enables verbose logging of the jaxrs requests -->
      <property name="debugRequests">true</property>
    </configuration>
  </container>

</arquillian>
